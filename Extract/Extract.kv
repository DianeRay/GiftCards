#:import FixBrokenClipboardTextInput FixBrokenClipboardTextInput.FixBrokenClipboardTextInput

<Extract>
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,.08
        size_hint_max_y: 30

        orientation: 'horizontal'
        Button:
            id: dropdownbtn
            height: 30
            text: 'Select'

        Button:
            id: start
            text: 'Extract!'
            background_color: [0,0.9,0,1]
            on_release: root.extract_cards()

        Label:
            size_hint_max_x: 100000

        Label:
            markup: True
            text: '[ref=screenshot]Screenshots[/ref]'
            on_ref_press: root.label_checked()
            size_hint_max_x: 100

        CheckBox:
            id: screenshots
            size_hint_min_x: 10
            size_hint_max_x: 10
            on_active: root.screenshots_checked(self.active)

        Label:
            size_hint_max_x: 10

    CommonWidgets:

<ExtractDialog>
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: progresslabel
            text: ''

