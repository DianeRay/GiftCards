#:import FixBrokenClipboardTextInput FixBrokenClipboardTextInput.FixBrokenClipboardTextInput

<Swipe>:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,.08
        size_hint_max_y: 30

        orientation: 'horizontal'
        FixBrokenClipboardTextInput:
            id: inputfield
            size_hint: .2, 1
            size_hint_min_x: 20
            multiline: False
            focus: True
            hint_text: "Type PIN, then swipe card. If no PIN, just swipe."
            on_text_validate: root.inputfield_entered()

    CommonWidgets:
